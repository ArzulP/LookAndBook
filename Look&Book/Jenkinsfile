pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                katalon -noSplash  -runMode=console -projectPath="LookAndBookTest\LookAndBookTest.prj" -retry=0 -testSuitePath="Test Suites/Authentification" -executionProfile="default" -browserType="Web Service"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}